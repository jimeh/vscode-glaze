{
  "name": "patina",
  "publisher": "jimeh",
  "displayName": "Patina",
  "description": "Applies subtle color tints to your editor windows based on the open project, so you can easily tell your workspaces apart.",
  "version": "0.0.4",
  "license": "MIT",
  "author": {
    "name": "Jim Myhrberg"
  },
  "homepage": "https://github.com/jimeh/vscode-patina",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimeh/vscode-patina"
  },
  "bugs": {
    "url": "https://github.com/jimeh/vscode-patina/issues"
  },
  "qna": false,
  "icon": "img/icon.png",
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": true
    }
  },
  "galleryBanner": {
    "color": "#1E1E24",
    "theme": "dark"
  },
  "keywords": [
    "color",
    "colorize",
    "customization",
    "patina",
    "project",
    "theme",
    "tint",
    "visual",
    "window",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist/extension.js",
    "img/icon.png",
    "package.json"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.102.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "patina.enableGlobally",
        "title": "Patina: Enable Globally"
      },
      {
        "command": "patina.disableGlobally",
        "title": "Patina: Disable Globally"
      },
      {
        "command": "patina.enableWorkspace",
        "title": "Patina: Enable for This Workspace"
      },
      {
        "command": "patina.disableWorkspace",
        "title": "Patina: Disable for This Workspace"
      },
      {
        "command": "patina.showColorPreview",
        "title": "Patina: Show Color Palette Preview"
      },
      {
        "command": "patina.showStatus",
        "title": "Patina: Show Status"
      },
      {
        "command": "patina.seedMenu",
        "title": "Patina: Seed Menu"
      },
      {
        "command": "patina.randomizeSeed",
        "title": "Patina: Randomize Tint Seed"
      },
      {
        "command": "patina.resetSeed",
        "title": "Patina: Reset Tint Seed"
      },
      {
        "command": "patina.forceApply",
        "title": "Patina: Force Apply Colors"
      }
    ],
    "configuration": {
      "title": "Patina",
      "properties": {
        "patina.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable Patina color tinting.",
          "order": 0
        },
        "patina.tint.colorScheme": {
          "type": "string",
          "enum": [
            "neon",
            "vibrant",
            "pastel",
            "muted",
            "tinted",
            "duotone",
            "undercurrent",
            "analogous"
          ],
          "enumItemLabels": [
            "Neon",
            "Vibrant",
            "Pastel",
            "Muted",
            "Tinted",
            "Duotone",
            "Undercurrent",
            "Analogous"
          ],
          "enumDescriptions": [
            "Maximum chroma with elevated lightness for vivid glow",
            "Higher saturation for bolder, more noticeable colors",
            "Soft, muted tones that blend gently with any theme",
            "Desaturated, subtle tones for minimal visual impact",
            "Very subtle color hints while retaining hue variation",
            "Base hue + complementary hue split across UI elements",
            "Base hue + complementary accent on status bar",
            "Three adjacent hues for harmonious color transitions"
          ],
          "default": "pastel",
          "description": "Color scheme for tinting: pastel (soft tones), vibrant (bold colors), muted (subtle), tinted (barely-there tints), duotone (complementary split), undercurrent (complementary accent on status bar), analogous (adjacent hues), or neon (maximum glow).",
          "order": 1
        },
        "patina.workspaceIdentifier.source": {
          "type": "string",
          "enum": [
            "name",
            "pathRelativeToHome",
            "pathAbsolute",
            "pathRelativeToCustom"
          ],
          "enumItemLabels": [
            "Folder Name",
            "Path (Relative to Home)",
            "Path (Absolute)",
            "Path (Relative to Custom)"
          ],
          "enumDescriptions": [
            "Workspace folder name only",
            "Path relative to home directory",
            "Absolute filesystem path",
            "Path relative to a custom base path"
          ],
          "default": "pathRelativeToHome",
          "description": "Determines what value is used to generate the workspace color.",
          "order": 2
        },
        "patina.workspaceIdentifier.multiRootSource": {
          "type": "string",
          "enum": [
            "workspaceFile",
            "allFolders",
            "firstFolder"
          ],
          "enumItemLabels": [
            "Workspace File",
            "All Folders",
            "First Folder"
          ],
          "enumDescriptions": [
            "Use the .code-workspace file path as the identifier base",
            "Combine all workspace folder paths into the identifier",
            "Use only the first workspace folder (backward compatible)"
          ],
          "default": "workspaceFile",
          "markdownDescription": "Determines the identifier base for multi-root workspaces. Combined with `source` to format the final identifier. Only applies when a `.code-workspace` file is open.",
          "order": 3
        },
        "patina.elements.titleBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color tint to the window title bar.",
          "order": 4
        },
        "patina.elements.activityBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color tint to the left side activity bar.",
          "order": 5
        },
        "patina.elements.statusBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color tint to the bottom status bar.",
          "order": 6
        },
        "patina.theme.blendFactor": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.35,
          "description": "How much to blend tint colors toward the theme's background. 0 = full tint (no blending), 1 = theme colors only (no tinting). Only applies to known themes.",
          "order": 7
        },
        "patina.theme.titleBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the title bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 8
        },
        "patina.theme.activityBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the activity bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 9
        },
        "patina.theme.statusBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the status bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 10
        },
        "patina.workspaceIdentifier.customBasePath": {
          "type": "string",
          "default": "",
          "description": "Base path for 'pathRelativeToCustom' source. Supports ~ and $HOME for home directory. Falls back to absolute path if workspace is outside this path.",
          "order": 11
        },
        "patina.tint.mode": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "enumItemLabels": [
            "Auto-detect",
            "Light",
            "Dark"
          ],
          "enumDescriptions": [
            "Automatically detect from VSCode's current theme",
            "Always use light theme colors",
            "Always use dark theme colors"
          ],
          "default": "auto",
          "description": "Theme mode for color generation. Auto-detects from VSCode's current theme.",
          "order": 12
        },
        "patina.tint.seed": {
          "type": "integer",
          "default": 0,
          "description": "Seed value used to shift the base color tint calculation. Changing this value will produce completely different colors for all workspaces.",
          "order": 13
        },
        "patina.theme.colors": {
          "type": "object",
          "default": {},
          "markdownDescription": "Custom theme colors for themes not in the built-in list or to override built-in values. Uses native VSCode color keys.\n\n**Example:**\n```json\n{\n  \"My Theme\": {\n    \"colors\": {\n      \"editor.background\": \"#282C34\",\n      \"titleBar.activeBackground\": \"#21252B\",\n      \"statusBar.background\": \"#21252B\",\n      \"activityBar.background\": \"#21252B\"\n    },\n    \"type\": \"dark\"\n  }\n}\n```",
          "order": 14,
          "additionalProperties": {
            "type": "object",
            "required": [
              "colors",
              "type"
            ],
            "properties": {
              "colors": {
                "type": "object",
                "description": "Colors for different UI elements using native VSCode keys",
                "required": [
                  "editor.background"
                ],
                "properties": {
                  "editor.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Main editor background (required)"
                  },
                  "editor.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Main editor foreground"
                  },
                  "titleBar.activeBackground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Active title bar background"
                  },
                  "titleBar.activeForeground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Active title bar foreground"
                  },
                  "titleBar.inactiveBackground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Inactive title bar background"
                  },
                  "titleBar.inactiveForeground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Inactive title bar foreground"
                  },
                  "statusBar.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Status bar background"
                  },
                  "statusBar.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Status bar foreground"
                  },
                  "activityBar.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Activity bar background"
                  },
                  "activityBar.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Activity bar foreground"
                  }
                },
                "additionalProperties": false
              },
              "type": {
                "type": "string",
                "enum": [
                  "dark",
                  "light",
                  "hcDark",
                  "hcLight"
                ],
                "description": "Theme type (dark, light, hcDark, hcLight)"
              }
            },
            "additionalProperties": false
          }
        },
        "patina.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show Patina status in the status bar.",
          "order": 15
        }
      }
    }
  },
  "scripts": {
    "generate-colornames": "tsx scripts/generate-colornames.ts",
    "postinstall": "pnpm run generate-colornames",
    "vscode:prepublish": "pnpm run bundle",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "bundle": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package": "pnpm exec vsce package --no-dependencies",
    "vsce:ls": "pnpm run vscode:prepublish && pnpm exec vsce ls --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src && prettier --check .",
    "lint:fix": "eslint src --fix && prettier --write .",
    "format": "prettier --write .",
    "test": "vscode-test",
    "test:coverage": "vscode-test --coverage",
    "test:coverage:html": "vscode-test --coverage --coverage-reporter=html --coverage-reporter=lcov --coverage-output=coverage",
    "extract-themes": "tsx scripts/extract-theme-colors/index.ts",
    "extract-themes:dry-run": "tsx scripts/extract-theme-colors/index.ts --dry-run",
    "extract-themes:verbose": "tsx scripts/extract-theme-colors/index.ts --verbose",
    "generate-images": "tsx scripts/generate-images.ts"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.10",
    "@types/nearest-color": "^0.4.1",
    "@types/node": "22.x",
    "@types/plist": "^3.0.5",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "adm-zip": "^0.5.16",
    "color-name-list": "^14.29.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jsonc-parser": "^3.3.1",
    "npm-run-all2": "^8.0.4",
    "ovsx": "^0.10.8",
    "plist": "^3.1.0",
    "prettier": "^3.8.1",
    "semver": "^7.7.3",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "nearest-color": "^0.4.4"
  }
}
