{
  "name": "glaze",
  "publisher": "jimeh",
  "displayName": "Glaze",
  "description": "Subtle, automatic color tints for your VS Code windows.",
  "version": "0.1.3",
  "license": "MIT",
  "author": {
    "name": "Jim Myhrberg"
  },
  "homepage": "https://github.com/jimeh/vscode-glaze",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimeh/vscode-glaze"
  },
  "bugs": {
    "url": "https://github.com/jimeh/vscode-glaze/issues"
  },
  "qna": false,
  "icon": "img/icon.png",
  "categories": [
    "Other",
    "Themes"
  ],
  "extensionKind": [
    "ui"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": true
    }
  },
  "galleryBanner": {
    "color": "#1E1E24",
    "theme": "dark"
  },
  "keywords": [
    "color",
    "colorize",
    "customization",
    "glaze",
    "project",
    "theme",
    "tint",
    "visual",
    "window",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist/extension.js",
    "dist/web/extension.js",
    "img/icon.png",
    "package.json"
  ],
  "browser": "./dist/web/extension.js",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.95.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "glaze.enableGlobally",
        "title": "Glaze: Enable Globally"
      },
      {
        "command": "glaze.disableGlobally",
        "title": "Glaze: Disable Globally"
      },
      {
        "command": "glaze.enableWorkspace",
        "title": "Glaze: Enable for This Workspace"
      },
      {
        "command": "glaze.disableWorkspace",
        "title": "Glaze: Disable for This Workspace"
      },
      {
        "command": "glaze.showColorPreview",
        "title": "Glaze: Show Color Palette Preview"
      },
      {
        "command": "glaze.showStatus",
        "title": "Glaze: Show Status"
      },
      {
        "command": "glaze.quickMenu",
        "title": "Glaze: Quick Menu"
      },
      {
        "command": "glaze.randomizeSeed",
        "title": "Glaze: Randomize Tint Seed"
      },
      {
        "command": "glaze.resetSeed",
        "title": "Glaze: Reset Tint Seed"
      },
      {
        "command": "glaze.clearWorkspaceEnabled",
        "title": "Glaze: Clear Workspace Enabled Setting"
      },
      {
        "command": "glaze.forceApply",
        "title": "Glaze: Force Apply Colors"
      },
      {
        "command": "glaze.retryApply",
        "title": "Glaze: Retry Apply Colors"
      },
      {
        "command": "glaze.setBaseHueOverride",
        "title": "Glaze: Set Base Hue Override"
      },
      {
        "command": "glaze.clearBaseHueOverride",
        "title": "Glaze: Clear Base Hue Override"
      }
    ],
    "configuration": {
      "title": "Glaze",
      "properties": {
        "glaze.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable Glaze color tinting.",
          "order": 0
        },
        "glaze.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show Glaze status in the status bar.",
          "order": 1
        },
        "glaze.tint.colorStyle": {
          "type": "string",
          "enum": [
            "neon",
            "vibrant",
            "pastel",
            "muted",
            "tinted",
            "adaptive"
          ],
          "enumItemLabels": [
            "Neon",
            "Vibrant",
            "Pastel",
            "Muted",
            "Tinted",
            "Adaptive"
          ],
          "enumDescriptions": [
            "Maximum chroma with elevated lightness for vivid glow",
            "Higher saturation for bolder, more noticeable colors",
            "Soft, muted tones that blend gently with any theme",
            "Desaturated, subtle tones for minimal visual impact",
            "Very subtle color hints while retaining hue variation",
            "Preserves theme's lightness/chroma, shifts only the hue"
          ],
          "default": "pastel",
          "description": "Controls the intensity and style of tint colors. Combine with Color Harmony to vary hue distribution across elements.",
          "order": 2
        },
        "glaze.tint.colorHarmony": {
          "type": "string",
          "enum": [
            "uniform",
            "accent",
            "gradient",
            "analogous",
            "undercurrent",
            "duotone",
            "split-complementary",
            "triadic",
            "tetradic"
          ],
          "enumItemLabels": [
            "Uniform",
            "Accent",
            "Gradient",
            "Analogous",
            "Undercurrent",
            "Duotone",
            "Split-Complementary",
            "Triadic",
            "Tetradic"
          ],
          "enumDescriptions": [
            "Single hue across all elements",
            "Single element gets a distinct pop",
            "Progressive hue sweep across elements",
            "Three adjacent hues spread across elements",
            "Complementary accent on status bar",
            "Complementary accent on activity and side bar",
            "Two hues flanking the complement",
            "Three evenly-spaced hues for maximum variation",
            "Four hues at 90Â° intervals"
          ],
          "default": "uniform",
          "description": "Controls how hues are distributed across UI elements. Uniform uses a single hue; other options spread hues across the color wheel.",
          "order": 3
        },
        "glaze.workspaceIdentifier.source": {
          "type": "string",
          "enum": [
            "name",
            "pathRelativeToHome",
            "pathAbsolute",
            "pathRelativeToCustom"
          ],
          "enumItemLabels": [
            "Folder Name",
            "Path (Relative to Home)",
            "Path (Absolute)",
            "Path (Relative to Custom)"
          ],
          "enumDescriptions": [
            "Workspace folder name only",
            "Path relative to home directory",
            "Absolute filesystem path",
            "Path relative to a custom base path"
          ],
          "default": "pathRelativeToHome",
          "description": "Determines what value is used to generate the workspace color.",
          "order": 4
        },
        "glaze.workspaceIdentifier.multiRootSource": {
          "type": "string",
          "enum": [
            "workspaceFile",
            "allFolders",
            "firstFolder"
          ],
          "enumItemLabels": [
            "Workspace File",
            "All Folders",
            "First Folder"
          ],
          "enumDescriptions": [
            "Use the .code-workspace file path as the identifier base",
            "Combine all workspace folder paths into the identifier",
            "Use only the first workspace folder (backward compatible)"
          ],
          "default": "workspaceFile",
          "markdownDescription": "Determines the identifier base for multi-root workspaces. Combined with `source` to format the final identifier. Only applies when a `.code-workspace` file is open.",
          "order": 5
        },
        "glaze.workspaceIdentifier.customBasePath": {
          "type": "string",
          "default": "",
          "description": "Base path for 'pathRelativeToCustom' source. Supports ~ and $HOME for home directory. Falls back to absolute path if workspace is outside this path.",
          "order": 6
        },
        "glaze.workspaceIdentifier.includeRemoteAuthority": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Include the remote host identity (e.g. SSH hostname, WSL distro) in the workspace identifier. When enabled, the same path on different remote hosts produces different colors. Disable to get the same color regardless of whether you connect locally or via SSH.",
          "order": 7
        },
        "glaze.workspaceIdentifier.remoteHomeDirectory": {
          "type": "string",
          "default": "",
          "markdownDescription": "Home directory override for remote workspaces. Used by `pathRelativeToHome` when the automatic detection fails. Example: `/home/myuser`. Leave empty to use automatic detection.",
          "order": 8
        },
        "glaze.elements.titleBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color tint to the window title bar.",
          "order": 9
        },
        "glaze.elements.activityBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color tint to the left side activity bar.",
          "order": 10
        },
        "glaze.elements.sideBar": {
          "type": "boolean",
          "default": false,
          "description": "Apply color tint to the side bar.",
          "order": 11
        },
        "glaze.elements.statusBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color tint to the bottom status bar.",
          "order": 12
        },
        "glaze.theme.blendMethod": {
          "type": "string",
          "enum": [
            "overlay",
            "hueShift"
          ],
          "enumItemLabels": [
            "Overlay",
            "Hue Shift"
          ],
          "enumDescriptions": [
            "Alpha compositing in linear sRGB for colors closer to the theme",
            "OKLCH interpolation with directed hue for perceptually uniform blending"
          ],
          "default": "overlay",
          "description": "Blending algorithm for combining tint and theme colors. Overlay uses linear sRGB alpha compositing; Hue Shift uses OKLCH for uniform transitions.",
          "order": 13
        },
        "glaze.theme.blendFactor": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.35,
          "description": "How much to blend tint colors toward the theme's background. 0 = full tint (no blending), 1 = theme colors only (no tinting). Only applies to known themes.",
          "order": 14
        },
        "glaze.theme.titleBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the title bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 15
        },
        "glaze.theme.activityBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the activity bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 16
        },
        "glaze.theme.sideBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the side bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 17
        },
        "glaze.theme.statusBarBlendFactor": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": null,
          "description": "Override blend factor for the status bar. When set, overrides the default blend factor for this element. null = use default.",
          "order": 18
        },
        "glaze.tint.mode": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "enumItemLabels": [
            "Auto-detect",
            "Light",
            "Dark"
          ],
          "enumDescriptions": [
            "Automatically detect from VSCode's current theme",
            "Always use light theme colors",
            "Always use dark theme colors"
          ],
          "default": "auto",
          "description": "Theme mode for color generation. Auto-detects from VSCode's current theme.",
          "order": 19
        },
        "glaze.tint.seed": {
          "type": "integer",
          "default": 0,
          "description": "Seed value used to shift the base color tint calculation. Changing this value will produce completely different colors for all workspaces.",
          "order": 20
        },
        "glaze.tint.baseHueOverride": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0,
          "maximum": 359,
          "default": null,
          "description": "Override the base hue (0-359) for this workspace. When set, bypasses the deterministic hue calculation. Intended for workspace-level configuration.",
          "order": 21
        },
        "glaze.theme.colors": {
          "type": "object",
          "default": {},
          "markdownDescription": "Custom theme colors for themes not in the built-in list or to override built-in values. Uses native VSCode color keys.\n\n**Example:**\n```json\n{\n  \"My Theme\": {\n    \"colors\": {\n      \"editor.background\": \"#282C34\",\n      \"titleBar.activeBackground\": \"#21252B\",\n      \"statusBar.background\": \"#21252B\",\n      \"activityBar.background\": \"#21252B\"\n    },\n    \"type\": \"dark\"\n  }\n}\n```",
          "order": 22,
          "additionalProperties": {
            "type": "object",
            "required": [
              "colors",
              "type"
            ],
            "properties": {
              "colors": {
                "type": "object",
                "description": "Colors for different UI elements using native VSCode keys",
                "required": [
                  "editor.background"
                ],
                "properties": {
                  "editor.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Main editor background (required)"
                  },
                  "editor.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Main editor foreground"
                  },
                  "titleBar.activeBackground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Active title bar background"
                  },
                  "titleBar.activeForeground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Active title bar foreground"
                  },
                  "titleBar.inactiveBackground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Inactive title bar background"
                  },
                  "titleBar.inactiveForeground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Inactive title bar foreground"
                  },
                  "statusBar.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Status bar background"
                  },
                  "statusBar.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Status bar foreground"
                  },
                  "activityBar.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Activity bar background"
                  },
                  "activityBar.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Activity bar foreground"
                  },
                  "sideBar.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Side bar background"
                  },
                  "sideBar.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Side bar foreground"
                  },
                  "sideBarSectionHeader.background": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Side bar section header background"
                  },
                  "sideBarSectionHeader.foreground": {
                    "type": "string",
                    "pattern": "^#[0-9A-Fa-f]{6}$",
                    "description": "Side bar section header foreground"
                  }
                },
                "additionalProperties": false
              },
              "type": {
                "type": "string",
                "enum": [
                  "dark",
                  "light",
                  "hcDark",
                  "hcLight"
                ],
                "description": "Theme type (dark, light, hcDark, hcLight)"
              }
            },
            "additionalProperties": false
          }
        }
      }
    }
  },
  "scripts": {
    "generate-colornames": "tsx scripts/generate-colornames.ts",
    "postinstall": "pnpm run generate-colornames",
    "vscode:prepublish": "pnpm run bundle",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "bundle": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package": "npx -y @vscode/vsce package --no-dependencies --out $(node -p \"const p=require('./package.json');p.publisher+'.'+p.name+'-'+p.version+'.vsix'\")",
    "vsce:ls": "pnpm run vscode:prepublish && npx -y @vscode/vsce ls --no-dependencies",
    "compile-tests": "tsc -p . --outDir out",
    "prepare-test-manifest": "tsx scripts/generate-test-manifest.ts",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "rm -f src/test/fixtures/test-workspace/.vscode/settings.json && pnpm run compile-tests && pnpm run prepare-test-manifest && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "oxlint src && oxfmt --check .",
    "lint:fix": "oxlint src --fix && oxfmt --write .",
    "format": "oxfmt --write .",
    "test": "vscode-test --fail-zero",
    "compile-tests:web": "node esbuild.test-web.js",
    "pretest:web": "pnpm run compile && pnpm run compile-tests:web",
    "test:web": "vscode-test-web --browserType=chromium --headless --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/index.js",
    "test:scripts": "node --import tsx --test --test-reporter spec $(find scripts/extract-theme-colors/__tests__ -name '*.test.ts')",
    "test:coverage": "pnpm run pretest && vscode-test --coverage --fail-zero",
    "test:coverage:html": "pnpm run pretest && vscode-test --coverage --coverage-reporter=html --coverage-reporter=lcov --coverage-output=coverage --fail-zero",
    "extract-themes": "tsx scripts/extract-theme-colors/index.ts",
    "extract-themes:dry-run": "tsx scripts/extract-theme-colors/index.ts --dry-run",
    "extract-themes:verbose": "tsx scripts/extract-theme-colors/index.ts --verbose",
    "generate-images": "tsx scripts/generate-images.ts",
    "verify:vsix-files": "tsx scripts/verify-vsix-files.ts"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.10",
    "@types/nearest-color": "^0.4.1",
    "@types/node": "^20.19.33",
    "@types/plist": "^3.0.5",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.79",
    "adm-zip": "^0.5.16",
    "assert": "^2.1.0",
    "choma": "^1.2.1",
    "color-name-list": "^14.31.0",
    "esbuild": "^0.27.3",
    "jsonc-parser": "^3.3.1",
    "mocha": "^11.7.5",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "path-browserify": "^1.0.1",
    "plist": "^3.1.0",
    "process": "^0.11.10",
    "semver": "^7.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "util": "^0.12.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@playwright/browser-chromium",
      "@resvg/resvg-js",
      "esbuild"
    ]
  },
  "dependencies": {
    "nearest-color": "^0.4.4"
  }
}
